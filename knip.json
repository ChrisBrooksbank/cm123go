{
    "entry": ["src/main.ts", "src/**/*.test.ts"],
    "project": ["src/**/*.ts"],
    "paths": {
        "@/*": ["src/*"],
        "@api/*": ["src/api/*"],
        "@core/*": ["src/core/*"],
        "@utils/*": ["src/utils/*"],
        "@config/*": ["src/config/*"],
        "@types/*": ["src/types/*"]
    },
    "ignoreDependencies": ["sharp"]
}
