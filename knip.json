{
    "entry": ["src/main.ts"],
    "project": ["src/**/*.ts"],
    "ignore": ["**/*.test.ts", "**/*.spec.ts"],
    "paths": {
        "@/*": ["src/*"],
        "@api/*": ["src/api/*"],
        "@core/*": ["src/core/*"],
        "@utils/*": ["src/utils/*"],
        "@config/*": ["src/config/*"],
        "@types/*": ["src/types/*"]
    }
}
